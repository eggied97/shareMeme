<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
      android:background="@android:color/white"
     android:layout_gravity="center_horizontal" >

    <ImageView
        android:id="@+id/IVMerrickPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:maxWidth="160dp"
              android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:src="@drawable/fun" />

    <TextView
        android:id="@+id/textviewMLeeJr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="M. Lee Jr" />
    
        <TextView
        android:id="@+id/textviewIOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="iOS developer" />
        
         <TextView
        android:id="@+id/textviewTheUnitedStates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="United States" />
             
  	 <ImageView
  	     android:id="@+id/twitter_Merrick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:maxWidth="160dp"
        android:scaleType="centerInside"
              android:layout_gravity="center_horizontal"
        android:src="@drawable/mtweet" />
    
</LinearLayout>