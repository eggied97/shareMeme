<?xml version="1.0" encoding="utf-8"?>

<!-- Egbert -->
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
      android:background="@android:color/white"
     android:layout_gravity="center_horizontal" >

    <ImageView
        android:id="@+id/IVegbertPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:maxWidth="160dp"
        android:scaleType="centerInside"
              android:layout_gravity="center_horizontal"
        android:src="@drawable/egbert2" 
        />

    <TextView
        android:id="@+id/textviewEgbertDijkstra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textSize="@dimen/TextGrootteMore"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:text="Egbert Dijkstra" />
    
        <TextView
        android:id="@+id/textviewAndroidDeveloper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="@dimen/TextGrootteMore"
        android:layout_gravity="center_horizontal"
        android:text="Android developer" />
        
         <TextView
        android:id="@+id/textviewTheNetherlands"
        android:layout_width="wrap_content"
        android:textSize="@dimen/TextGrootteMore"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="The Netherlands" />
         
             <ImageView
        android:id="@+id/twitter_egbert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:maxWidth="160dp"
        android:scaleType="centerInside"
              android:layout_gravity="center_horizontal"
        android:src="@drawable/etweet" 
        />
    
</LinearLayout>
